<android.support.v4.widget.SwipeRefreshLayout
    tools:context="com.dy45.reader.Activity.ArticleActivity"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:id="@+id/hq_container"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
    <LinearLayout
        android:padding="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ListView
            android:layout_weight="1"
            android:layout_margin="1dp"
            android:id="@+id/hq_list"
            android:background="@android:color/white"
            android:dividerHeight="1dp"
            android:listSelector="@drawable/list_item_selector"
            android:divider="@android:color/darker_gray"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </ListView>
        <!--<Button-->
            <!---->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content" />-->

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RadioGroup
                android:id="@+id/hq_radioGroup"
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/hq_love_stock"
                    android:text="自选"
                    android:checked="true"
                    android:layout_marginRight="5dp"/>
                <RadioButton
                    android:id="@+id/hq_fetchLimitUp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="选项2"
                    android:checked="false"
                    android:layout_marginRight="5dp"/>

            </RadioGroup>
            <Button
                android:padding="1dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_hq_refreshhq"
                android:text="Refresh"
                />

            <TextView
                android:id="@+id/hq_refresh_Time"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:text="refresh"
                android:layout_height="match_parent" />

        </LinearLayout>


    </LinearLayout>
</android.support.v4.widget.SwipeRefreshLayout>